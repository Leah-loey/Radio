.find { 
    width: 88%;
    height: 60rpx;
    background-color: #efefef;
    margin: 50rpx auto;
    border-radius: 50rpx;
    overflow: hidden;


}

.find .text {
    width: 85%;
    height: 60rpx;
    float: left;
    text-align: start;
    padding-left: 25rpx;
    color: #a9a9a9;

}

.find-btn {
    width: 60rpx;
    height: 60rpx;
    float: right;
    position: relative;
}

.find-btn image {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}

