    font-size: 36rpx;
}

.more {
    margin-top: 3rpx;
    /* height:10%; */
    /* width: 20%; */
    border: #9999994b solid 1rpx;
    float: right;
    display: flex;
    align-items: center;
    /* background-color: aqua; */
