/* pages/radio/radio.wxss */

page {
    background: #f6f6f6;
    padding-bottom:120rpx;
}
text{
    letter-spacing:3rpx;
}

.swiperClass {
    margin: 0;
    margin-top: 30rpx;
}

.slide-image {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 10px;
    position: relative;
}

image.active {
    transform: none;
    transition: all 0.2s ease-in 0s;
}

image.quiet {
    transform: scale(0.8333333);
    transition: all 0.2s ease-in 0s;
}

.find {
    width: 88%;
    height: 60rpx;
    background-color: #efefef;
    margin: 30rpx auto;
    border-radius: 50rpx;
    overflow: hidden;


}

.find .text {
    width: 85%;
    height: 60rpx;
    float: left;
    text-align: start;
    padding-left: 25rpx;
    color: #a9a9a9;

}

.find-btn {
    width: 60rpx;
    height: 60rpx;
    float: right;
    position: relative;
}

.find-btn image {
    width: 35rpx;
    height: 35rpx;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}


.recommend {
    width: 88%;
    /* margin-top: 30rpx; */
    margin-left: 38rpx;
    /* margin: 70rpx; */
    text-align: start;
    margin-bottom: 10rpx;
    /* background-color: aqua; */
}

.recommend text {
    color: #333333;
